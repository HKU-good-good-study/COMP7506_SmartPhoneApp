<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout_no_code_found"
    tools:ignore="UseSwitchCompatOrMaterialXml">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton_inView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:src="@drawable/back"
        app:backgroundTint="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:focusable="true" />

    <TextView
        android:id="@+id/title_textView_inView"
        android:layout_width="292dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="View post"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backButton_inView"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/pose_TextView_inView"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/pose_ImageView_inView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_textView_inView" />

    <ImageView
        android:id="@+id/pose_ImageView_inView"
        android:layout_width="360dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pose_TextView_inView"/>

    <TextView
        android:id="@+id/post_privateflag_inView"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/pose_location_inView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pose_ImageView_inView" />

    <TextView
        android:id="@+id/pose_location_inView"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_privateflag_inView" />



</androidx.constraintlayout.widget.ConstraintLayout>